# Server Configuration
PORT=3000
NODE_ENV=development
HOST=0.0.0.0

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Crawler Configuration
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30000
USER_AGENT=ARW-Crawler/1.0
MAX_DEPTH=3
MAX_PAGES=100

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Puppeteer Configuration
PUPPETEER_HEADLESS=true
PUPPETEER_TIMEOUT=30000

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# API Configuration
API_PREFIX=/api/v1
CORS_ORIGIN=*
