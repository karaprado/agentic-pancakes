{
  "name": "@agent-ready-web/crawler-service",
  "version": "0.1.0",
  "description": "Production-ready web crawler API service with ARW discovery capabilities",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "arw-crawler": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint --fix .",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist node_modules .turbo"
  },
  "dependencies": {
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "cheerio": "^1.0.0-rc.12",
    "puppeteer": "^21.6.1",
    "bullmq": "^5.1.0",
    "ioredis": "^5.3.2",
    "node-cache": "^5.1.2",
    "robots-parser": "^3.0.1",
    "undici": "^6.19.8",
    "zod": "^3.22.4",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0",
    "@vitest/coverage-v8": "^1.1.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "arw",
    "agent-ready-web",
    "web-crawler",
    "api",
    "llms.txt",
    "robots.txt",
    "content-extraction",
    "machine-view",
    "ai-optimization"
  ],
  "license": "MIT"
}
