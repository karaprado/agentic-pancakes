{
  "name": "@agent-ready-web/validators",
  "version": "0.1.0",
  "description": "Python and Node.js validators for ARW manifests",
  "private": true,
  "type": "module",
  "scripts": {
    "prebuild": "./scripts/setup-python-env.sh",
    "build": "pnpm build:python",
    "build:python": "./scripts/setup-python-env.sh",
    "pretest": "./scripts/setup-python-env.sh",
    "test": "pnpm test:python && pnpm test:node",
    "test:python": "./scripts/run-python-tests.sh",
    "test:node": "node validate-arw.mjs ../www/public/llms.txt ../schemas/arw_model.json",
    "validate": "pnpm validate:python",
    "validate:python": "python validate-arw.py",
    "validate:node": "node validate-arw.mjs",
    "clean": "rm -rf .venv venv __pycache__ *.pyc .pytest_cache",
    "setup": "./scripts/setup-python-env.sh"
  },
  "keywords": [
    "arw",
    "validator",
    "python",
    "nodejs"
  ],
  "license": "MIT"
}
