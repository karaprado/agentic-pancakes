{
  "name": "@arw/schemas",
  "version": "1.0.0",
  "description": "TypeScript types and JSON schemas for Agent-Ready Web (ARW) with TOON (Type-safe Object Notation) support",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./schemas": {
      "import": "./dist/schemas.mjs",
      "require": "./dist/schemas.js",
      "types": "./dist/schemas.d.ts"
    },
    "./validation": {
      "import": "./dist/validation.mjs",
      "require": "./dist/validation.js",
      "types": "./dist/validation.d.ts"
    }
  },
  "files": [
    "dist",
    "schemas",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/schemas.ts src/validation.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts src/schemas.ts src/validation.ts --format cjs,esm --dts --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "arw",
    "agent-ready-web",
    "llm",
    "ai-agents",
    "schemas",
    "validation",
    "linkml",
    "json-schema",
    "toon",
    "type-safe-object-notation",
    "machine-readable"
  ],
  "author": "ARW Maintainers",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nolandubeau/agent-ready-web.git",
    "directory": "packages/@arw/schemas"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.0.0",
    "js-yaml": "^4.1.0",
    "tsup": "^8.0.0",
    "typescript": "^5.6.0",
    "vitest": "^1.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
