{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://arw.spec.dev/schema/arw-policies.schema.json",
  "title": "ArwPolicies",
  "type": "object",
  "required": ["inference", "training", "attribution"],
  "properties": {
    "inference": {
      "type": "string",
      "enum": ["allow", "disallow", "conditional"]
    },
    "training": {
      "type": "string",
      "enum": ["allow", "disallow", "conditional"]
    },
    "attribution": {
      "type": "object",
      "required": ["required"],
      "properties": {
        "required": {
          "type": "boolean"
        },
        "template": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "rate_limits": {
      "type": "object",
      "properties": {
        "anonymous_rps": {
          "type": "integer",
          "minimum": 0
        },
        "oauth_rps": {
          "type": "integer",
          "minimum": 0
        }
      },
      "additionalProperties": true
    },
    "contacts": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "email"
      }
    }
  },
  "additionalProperties": false
}
