{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://arw.spec.dev/schema/arw-manifest.schema.json",
  "title": "ArwManifest",
  "type": "object",
  "required": ["arw_version", "links"],
  "properties": {
    "arw_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+(\\.[0-9]+)?$"
    },
    "site": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "homepage": {
          "type": "string",
          "format": "uri"
        }
      },
      "additionalProperties": false
    },
    "links": {
      "type": "object",
      "properties": {
        "guide": {
          "type": "string",
          "format": "uri-reference"
        },
        "policies": {
          "type": "string",
          "format": "uri-reference"
        },
        "content_index": {
          "type": "string",
          "format": "uri-reference"
        },
        "openapi": {
          "type": "string",
          "format": "uri-reference"
        },
        "asyncapi": {
          "type": "string",
          "format": "uri-reference"
        },
        "delta": {
          "type": "string",
          "format": "uri-reference"
        },
        "sitemap": {
          "type": "string",
          "format": "uri-reference"
        }
      },
      "additionalProperties": false
    },
    "content_shards": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uri-reference"
      }
    }
  },
  "additionalProperties": false
}
