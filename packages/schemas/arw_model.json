{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ARWManifest",
  "type": "object",
  "required": ["version", "profile", "site", "policies"],
  "properties": {
    "version": {
      "oneOf": [{ "type": "string" }, { "type": "number" }]
    },
    "profile": {
      "type": "string",
      "enum": ["ARW-1", "ARW-2", "ARW-3", "ARW-4"]
    },
    "site": {
      "type": "object",
      "required": ["name", "homepage"],
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "homepage": {
          "type": "string",
          "format": "uri"
        },
        "contact": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "external_resources": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "url": { "type": "string" },
          "description": { "type": "string" }
        }
      }
    },
    "content": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["url", "machine_view"],
        "properties": {
          "url": {
            "type": "string"
          },
          "machine_view": {
            "type": "string"
          },
          "purpose": {
            "type": "string"
          },
          "priority": {
            "type": "string",
            "enum": ["high", "medium", "low"]
          },
          "chunks": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id"],
              "properties": {
                "id": {
                  "type": "string"
                },
                "heading": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    },
    "actions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "endpoint", "method", "auth"],
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "endpoint": {
            "type": "string"
          },
          "method": {
            "type": "string",
            "enum": ["GET", "POST", "PUT", "PATCH", "DELETE"]
          },
          "auth": {
            "type": "string",
            "enum": ["oauth2", "api_key", "none"]
          },
          "scopes": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "schema": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    },
    "protocols": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "type", "endpoint"],
        "properties": {
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "endpoint": {
            "type": "string"
          },
          "schema": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    },
    "oauth": {
      "type": "object",
      "required": ["authorization_url", "token_url"],
      "properties": {
        "authorization_url": {
          "type": "string"
        },
        "token_url": {
          "type": "string"
        },
        "scopes": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name"],
            "properties": {
              "name": {
                "type": "string"
              },
              "description": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "policies": {
      "type": "object",
      "required": ["training", "inference", "attribution"],
      "properties": {
        "training": {
          "type": "object",
          "required": ["allowed"],
          "properties": {
            "allowed": {
              "type": "boolean"
            },
            "note": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "inference": {
          "type": "object",
          "required": ["allowed"],
          "properties": {
            "allowed": {
              "type": "boolean"
            },
            "restrictions": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false
        },
        "attribution": {
          "type": "object",
          "required": ["required"],
          "properties": {
            "required": {
              "type": "boolean"
            },
            "format": {
              "type": "string"
            },
            "template": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "rate_limits": {
          "type": "object",
          "properties": {
            "authenticated": {
              "type": "string"
            },
            "unauthenticated": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "terms_of_service": {
          "type": "string"
        },
        "privacy_policy": {
          "type": "string"
        },
        "contact": {
          "type": "object",
          "properties": {
            "email": { "type": "string" },
            "response_time": { "type": "string" }
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
