{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://arw.spec.dev/schema/arw-content-index.schema.json",
  "title": "ArwContentIndex",
  "type": "object",
  "required": ["version", "items"],
  "properties": {
    "version": {
      "type": "string",
      "const": "1.0"
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "type", "url", "hash", "last_modified"],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "type": {
            "type": "string",
            "enum": ["llm.md", "llm.json", "other"]
          },
          "url": {
            "type": "string",
            "format": "uri"
          },
          "hash": {
            "type": "string",
            "pattern": "^(sha256|blake3)-[A-Za-z0-9+/=:-]+$"
          },
          "last_modified": {
            "type": "string",
            "format": "date-time"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "area": {
            "type": "string"
          },
          "related": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "uri"
            }
          }
        },
        "additionalProperties": false
      }
    },
    "next": {
      "type": "string",
      "format": "uri-reference"
    }
  },
  "additionalProperties": false
}
