{
  "name": "@agent-ready-web/cli",
  "version": "0.1.0",
  "description": "CLI tool for implementing Agent-Ready Web (ARW) on any website",
  "main": "index.js",
  "types": "index.d.ts",
  "bin": {
    "arw": "./bin/arw",
    "agent-ready-web": "./bin/arw"
  },
  "files": [
    "index.js",
    "index.d.ts",
    "bin/",
    "lib/",
    "pkg/**/*",
    "README.md"
  ],
  "scripts": {
    "build": "pnpm build:rust",
    "build:rust": "cd .. && cargo build --release",
    "build:wasm": "cd .. && wasm-pack build --target nodejs --out-dir npm/pkg --features wasm",
    "build:wasm:web": "cd .. && wasm-pack build --target web --out-dir npm/pkg-web --features wasm",
    "build:all": "pnpm build:rust && pnpm build:wasm",
    "build:binaries": "bash ../scripts/build-npm-package.sh",
    "package:binaries": "bash ../scripts/package-binaries.sh",
    "test": "cd .. && cargo test",
    "test:rust": "cd .. && cargo test",
    "test:wasm": "cd .. && wasm-pack test --node",
    "test:npm": "cd .. && node --test npm-tests/*.test.js",
    "test:package": "bash ../scripts/test-npm-package.sh",
    "test:all": "pnpm test:rust && pnpm test:wasm && pnpm test:npm",
    "clean": "cd .. && cargo clean && rm -rf npm/binaries npm/pkg",
    "clean:rust": "cd .. && cargo clean",
    "watch": "cd .. && cargo watch -x 'build --release'",
    "prepublishOnly": "pnpm build:wasm"
  },
  "keywords": [
    "arw",
    "agent-ready-web",
    "ai",
    "agents",
    "llm",
    "web",
    "cli",
    "wasm",
    "machine-views",
    "llms-txt"
  ],
  "author": "Nolan Dubeau <hello@nolandubeau.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/agent-ready-web/agent-ready-web.git",
    "directory": "packages/cli"
  },
  "homepage": "https://github.com/agent-ready-web/agent-ready-web",
  "bugs": {
    "url": "https://github.com/agent-ready-web/agent-ready-web/issues"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "dependencies": {},
  "devDependencies": {
    "cargo-watch": "^8.5.0"
  },
  "optionalDependencies": {},
  "publishConfig": {
    "access": "public"
  }
}
